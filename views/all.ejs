<body>
    <div>
        <% for(let i = 0; i < allProducts.length; i++) { %>
            <div class="card">
                <%= allProducts[i].title %>
                <img src="<%= allProducts[i].image%>" width="150px">
                <%= allProducts[i].description %>
                $<%= allProducts[i].price %>
            </div>
        <% } %> 
    </div> 
</body>

